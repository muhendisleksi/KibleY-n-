<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ═══ RENKLER ═══ -->
    <Color x:Key="PanelArkaplan">#FF0A0A0A</Color>
    <Color x:Key="KartArkaplan">#FF161616</Color>
    <Color x:Key="VurguRenk">#FF0078D4</Color>
    <Color x:Key="KibleKirmizi">#FFE74C3C</Color>
    <Color x:Key="KuzeyMavi">#FF3498DB</Color>
    <Color x:Key="MetinBeyaz">#FFFFFFFF</Color>
    <Color x:Key="MetinGri">#FFB0B0B8</Color>
    <Color x:Key="KenarlıkRenk">#FF2A2A2A</Color>
    <Color x:Key="GirisArkaplan">#FF111111</Color>
    <Color x:Key="HoverRenk">#FF252525</Color>

    <SolidColorBrush x:Key="PanelArkaplanBrush" Color="{StaticResource PanelArkaplan}"/>
    <SolidColorBrush x:Key="KartArkaplanBrush" Color="{StaticResource KartArkaplan}"/>
    <SolidColorBrush x:Key="VurguBrush" Color="{StaticResource VurguRenk}"/>
    <SolidColorBrush x:Key="KibleBrush" Color="{StaticResource KibleKirmizi}"/>
    <SolidColorBrush x:Key="KuzeyBrush" Color="{StaticResource KuzeyMavi}"/>
    <SolidColorBrush x:Key="MetinBeyazBrush" Color="{StaticResource MetinBeyaz}"/>
    <SolidColorBrush x:Key="MetinGriBrush" Color="{StaticResource MetinGri}"/>
    <SolidColorBrush x:Key="KenarlıkBrush" Color="{StaticResource KenarlıkRenk}"/>
    <SolidColorBrush x:Key="GirisArkaplanBrush" Color="{StaticResource GirisArkaplan}"/>

    <!-- ═══ KART STİLİ ═══ -->
    <Style x:Key="KartBorder" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource KartArkaplanBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource KenarlıkBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <!-- ═══ BAŞLIK STİLİ ═══ -->
    <Style x:Key="KartBaslik" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource MetinBeyazBrush}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
    </Style>

    <Style x:Key="AltBaslik" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource MetinGriBrush}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Margin" Value="0,2,0,2"/>
    </Style>

    <!-- ═══ TEXTBOX STİLİ ═══ -->
    <Style x:Key="KoyuTextBox" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource GirisArkaplanBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource MetinBeyazBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource KenarlıkBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="CaretBrush" Value="White"/>
    </Style>

    <!-- ═══ COMBOBOX STİLİ ═══ -->
    <Style x:Key="KoyuComboBox" TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource GirisArkaplanBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource MetinBeyazBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource KenarlıkBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Background" Value="{StaticResource GirisArkaplanBrush}"/>
                    <Setter Property="Foreground" Value="{StaticResource MetinBeyazBrush}"/>
                    <Setter Property="Padding" Value="6,4"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ComboBoxItem">
                                <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsHighlighted" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="#FF222222"/>
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Bd" Property="Background" Value="{StaticResource VurguBrush}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <ToggleButton x:Name="ToggleBtn"
                                      IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                      ClickMode="Press" Focusable="False">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="ToggleButton">
                                    <Border x:Name="ToggleBorder" Background="{StaticResource GirisArkaplanBrush}"
                                            BorderBrush="{StaticResource KenarlıkBrush}"
                                            BorderThickness="1" CornerRadius="6">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="24"/>
                                            </Grid.ColumnDefinitions>
                                            <Path x:Name="Arrow" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                                                  Data="M 0 0 L 4 4 L 8 0" Stroke="{StaticResource MetinGriBrush}"
                                                  StrokeThickness="1.5" Fill="Transparent"/>
                                        </Grid>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Arrow" Property="Stroke" Value="White"/>
                                        </Trigger>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="Arrow" Property="RenderTransform">
                                                <Setter.Value>
                                                    <RotateTransform Angle="180" CenterX="4" CenterY="2"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>
                        <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False"
                                          Content="{TemplateBinding SelectionBoxItem}"
                                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                          Margin="8,4,24,4" VerticalAlignment="Center"
                                          HorizontalAlignment="Left"/>
                        <Popup x:Name="Popup" IsOpen="{TemplateBinding IsDropDownOpen}"
                               Placement="Bottom" Focusable="False" AllowsTransparency="True"
                               PopupAnimation="Slide">
                            <Grid x:Name="DropDown" MinWidth="{TemplateBinding ActualWidth}"
                                  MaxHeight="{TemplateBinding MaxDropDownHeight}" SnapsToDevicePixels="True">
                                <Border Background="{StaticResource GirisArkaplanBrush}"
                                        BorderBrush="{StaticResource KenarlıkBrush}"
                                        BorderThickness="1" CornerRadius="8" Margin="0,2,0,0">
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="12" ShadowDepth="4" Opacity="0.4"/>
                                    </Border.Effect>
                                    <ScrollViewer SnapsToDevicePixels="True">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Grid>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══ BUTON STİLİ ═══ -->
    <Style x:Key="VurguButon" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource VurguBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,8"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd" Background="{TemplateBinding Background}"
                            CornerRadius="4" Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.85"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Bd" Property="Opacity" Value="0.4"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="KibleButon" TargetType="Button" BasedOn="{StaticResource VurguButon}">
        <Setter Property="Background" Value="{StaticResource KibleBrush}"/>
    </Style>

    <Style x:Key="IkinciButon" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource MetinGriBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource KenarlıkBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,6"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Bd" Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4" Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Bd" Property="Background" Value="{StaticResource KenarlıkBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══ CHECKBOX STİLİ ═══ -->
    <Style x:Key="KoyuCheckBox" TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource MetinGriBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Margin" Value="0,2"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <BulletDecorator SnapsToDevicePixels="True">
                        <BulletDecorator.Bullet>
                            <Border x:Name="CheckBorder" Width="20" Height="20"
                                    Background="{StaticResource GirisArkaplanBrush}"
                                    BorderBrush="{StaticResource MetinGriBrush}"
                                    BorderThickness="1.5" CornerRadius="4">
                                <Path x:Name="CheckMark"
                                      Data="M 3,10 L 7,14 L 15,4"
                                      Stroke="White" StrokeThickness="2"
                                      StrokeStartLineCap="Round" StrokeEndLineCap="Round" StrokeLineJoin="Round"
                                      Visibility="Collapsed"
                                      VerticalAlignment="Center" HorizontalAlignment="Center"
                                      Margin="-1,-1,0,0"/>
                            </Border>
                        </BulletDecorator.Bullet>
                        <ContentPresenter Margin="6,0,0,0"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                    </BulletDecorator>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="CheckBorder" Property="Background" Value="{StaticResource VurguBrush}"/>
                            <Setter TargetName="CheckBorder" Property="BorderBrush" Value="{StaticResource VurguBrush}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="CheckBorder" Property="BorderBrush" Value="{StaticResource VurguBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══ RADIOBUTTON STİLİ ═══ -->
    <Style x:Key="KoyuRadioButton" TargetType="RadioButton">
        <Setter Property="Foreground" Value="{StaticResource MetinGriBrush}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">
                    <BulletDecorator SnapsToDevicePixels="True">
                        <BulletDecorator.Bullet>
                            <Grid Width="16" Height="16">
                                <Ellipse x:Name="OuterCircle"
                                         Width="16" Height="16"
                                         Stroke="{StaticResource MetinGriBrush}"
                                         StrokeThickness="1.5"
                                         Fill="Transparent"/>
                                <Ellipse x:Name="InnerCircle"
                                         Width="8" Height="8"
                                         Fill="{StaticResource VurguBrush}"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"
                                         Visibility="Collapsed"/>
                            </Grid>
                        </BulletDecorator.Bullet>
                        <ContentPresenter Margin="6,0,0,0"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"/>
                    </BulletDecorator>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="InnerCircle" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="OuterCircle" Property="Stroke" Value="{StaticResource VurguBrush}"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="OuterCircle" Property="Stroke" Value="{StaticResource VurguBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ═══ LABEL STİLİ ═══ -->
    <Style x:Key="GirisLabel" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource MetinGriBrush}"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Margin" Value="0,0,0,3"/>
    </Style>

    <!-- ═══ BÜYÜK AÇI GÖSTERGE ═══ -->
    <Style x:Key="BuyukAciMetin" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{StaticResource KibleBrush}"/>
        <Setter Property="FontSize" Value="36"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- ═══ LİSTEBOX STİLİ ═══ -->
    <Style x:Key="GecmisListBox" TargetType="ListBox">
        <Setter Property="Background" Value="{StaticResource GirisArkaplanBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource MetinGriBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource KenarlıkBrush}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="MaxHeight" Value="120"/>
    </Style>

</ResourceDictionary>
